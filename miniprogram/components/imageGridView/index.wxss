/* components/imageGridView/index.wxss */
.gridImageContainer {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  width: 500rpx;
}

.gridImageItem:not(:nth-child(3)) {
  margin-right: 2%;
}

.gridImageItem {
  width: 32%;
  height: 170rpx;
  margin-top: 5rpx;
  border-radius: 5rpx;
}

.gridImageItem image {
  width: 100%;
  height: 100%;
}

/* 单图 */
.gridImageContainer .gridImageItem:last-child:first-child {
  width: 500rpx;
  height: 500rpx;
}

/* 四图 */
.gridImageContainer .gridImageItem:nth-last-child(4):first-child,
.gridImageContainer .gridImageItem:nth-last-child(3):nth-child(2),
.gridImageContainer .gridImageItem:nth-last-child(2):nth-child(3),
.gridImageContainer .gridImageItem:nth-last-child(1):nth-child(4) {
  width: 48%;
  height: 250rpx;
  margin-right: 0;
}
.gridImageContainer .gridImageItem:nth-last-child(4):first-child,
.gridImageContainer .gridImageItem:nth-last-child(2):nth-child(3) {
  margin-right: 2%;
}
.gridImageContainer .gridImageItem:nth-last-child(4):first-child,
.gridImageContainer .gridImageItem:nth-last-child(3):nth-child(2) {
  margin-bottom: 2%;
}
